<div class="listing-card listing-card-block listing-card-connector result-item view-item component-obj-view component-listing-view"
     i18n:domain="novaideo"
     >
  <div class="listing-card-img" 
       style="
              background-color: #3d5a98;">
    <div class="img-container">
      <img class="img-circle"
          tal:attributes="src request.static_url('novaideo:static/connectors/facebook/images/facebook.png')"  width="70"/>
    </div>
  </div>
  <div class="listing-card-container">
    <div class="listing-card-content">
      <div>
        <div class="listing-card-data">
            <span class="listing-card-title">
                  <span i18n:translate="">Facebook connector</span>
            </span>
          <div class="listing-card-addon">
            <small>
              <div i18n:translate="">The Facebook connector</div>
            </small>
          </div>
        </div>
      </div>
      <div class="listing-card-footer" style="margin-bottom: 15px;">
          <a  tal:attributes="href action.url(context)" 
         class="btn btn-primary btn-xs">
          <span class="${getattr(action, 'style_picto', '')}"></span> ${action.title}        
          </a>
      </div>
    </div>
  </div>
    <div class="action-interation-container action-slider-container"
         data-interaction_kind="slider">
      <button class="btn btn-primary action-slider-btn"><span class="glyphicon glyphicon-chevron-right"></span></button>
      <div class="container-body">
      </div>
  </div>
</div>
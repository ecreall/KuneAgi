<div class="connector-item thumbnail right-caption span4 search-item search-connector search-item-bloc result-item view-item component-obj-view component-listing-view"
     i18n:domain="novaideo"
     >
  <div role="presentation" class="card-img" 
       style="
          background-color: #0092bd;">
    <img class="img-circle"
        tal:attributes="src request.static_url('novaideo:static/connectors/yammer/images/yammer.png')"  width="70"/>
  </div>
  <div class="caption">
      <div class="card-data">
          <span class="card-title">
                <span i18n:translate="">Yammer connector</span>
          </span>
        <div class="card-addon">
          <small>
            <div i18n:translate="">The Yammer connector</div>
          </small>
        </div>
      </div>

      <div class="actions-block">
          <a  tal:attributes="href action.url(context)" 
         class="btn btn-primary btn-xs">
          <span class="${getattr(action, 'style_picto', '')}"></span> ${action.title}        
          </a>
      </div>
  </div>
    <div class="action-interation-container action-slider-container"
         data-interaction_kind="slider">
      <button class="btn btn-primary action-slider-btn"><span class="glyphicon glyphicon-chevron-right"></span></button>
      <div class="container-body">
      </div>
  </div>
</div>